<div class="contents row">
  <div class="container">
    <%= form_for (@tweet) do |f| %>
      <h3>
        投稿する
      </h3>
      <%= f.label :folderimage, "image" %>
      <%= f.file_field :folderimage %>
      <%= f.text_area :text, placeholder: 'text', style: 'cols:30;rows:10'%>
      <%= f.submit %>
    <% end %>
  </div>
</div>

